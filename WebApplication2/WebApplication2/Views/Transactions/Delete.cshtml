@model WebApplication2.Models.Transaction

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-warning">Usuń</h1>

<h3 class="text-warning"> Czy na pewno chcesz to usunąć?</h3>
<div>
    <h4 class ="text-warning">Transakcja</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 text-warning">
            @Html.DisplayNameFor(model => model.SenderWalletId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RecipientWalletId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RecipientId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CryptoId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayFor(model => model.CryptoQuantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Message)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a class="text-warning" asp-action="Index">Powrót do listy</a>
    </form>
</div>
