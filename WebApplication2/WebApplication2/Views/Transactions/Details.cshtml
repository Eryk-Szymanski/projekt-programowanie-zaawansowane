@model WebApplication2.Models.Transaction

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-warning">Detale</h1>

<div>
    <h4 class="text-warning">Transakcja</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 text-warning">
            @Html.DisplayNameFor(model => model.SenderWalletId)
        </dt>
        <dd class="col-sm-10 text-warning">
            @Model.SenderWallet.Name
        </dd>
        <dt class="col-sm-2 text-warning">
            @Html.DisplayNameFor(model => model.RecipientId)
        </dt>
        <dd class="col-sm-10 text-warning">
            @Model.Recipient.Email
        </dd>
        <dt class="col-sm-2 text-warning">
            @Html.DisplayNameFor(model => model.RecipientWalletId)
        </dt>
        <dd class="col-sm-10 text-warning">
            @Model.RecipientWallet.Name
        </dd>
        <dt class="col-sm-2 text-warning">
            @Html.DisplayNameFor(model => model.CryptoId)
        </dt>
        <dd class="col-sm-10 text-warning">
            @Model.Crypto.Name
        </dd>
        <dt class="col-sm-2 text-warning">
            @Html.DisplayNameFor(model => model.CryptoQuantity)
        </dt>
        <dd class="col-sm-10 text-warning">
            @Model.CryptoQuantity
        </dd>
        <dt class="col-sm-2 text-warning">
            @Html.DisplayNameFor(model => model.Message)
        </dt>
        <dd class="col-sm-10 text-warning">
            @Model.Message
        </dd>
    </dl>
</div>
<div>
    <a class="text-warning" asp-action="Index">Powrót do listy</a>
</div>
