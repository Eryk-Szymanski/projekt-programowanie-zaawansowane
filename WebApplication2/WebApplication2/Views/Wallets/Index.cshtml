@model IEnumerable<WebApplication2.Models.Wallet>
@{
    var walletValues = ViewData["WalletValues"] as Dictionary<string, float>;
}
        

@{
    ViewData["Title"] = "Portfele";
}

<h1 class ="text-warning">Portfele</h1>

<p>
    <a class="text-warning" asp-action="Create"><h2 class="p-3">Dodaj</h2></a>
</p>
<table class="text-warning table table-dark table-bordered border-warning">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CashBalance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cryptos)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @item.Name
            </td>
            <td>
                    @item.CashBalance zł
            </td>
            <td>
                    @walletValues[(item.Id).ToString()] zł
            </td>
                <td>
                    <a class="text-warning btn btn-sm border border-warning mx-2" asp-action="AddCashBalance" asp-route-id="@item.Id">Dodaj Saldo Gotówkowe</a>
                    <a class="text-warning btn btn-sm border border-warning mx-2" asp-action="Edit" asp-route-id="@item.Id">Edytuj Portfel</a>
                    <a class="text-warning btn btn-sm border border-warning mx-2" asp-action="Details" asp-route-id="@item.Id">Detale</a>
                    <a class="text-warning btn btn-sm border border-warning mx-2" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
        </tr>
}
    </tbody>
</table>
