@model IEnumerable<WebApplication2.Models.Crypto>

@{
    ViewData["Title"] = "Strona Głowna";
}

<h1>Strona Główna</h1>

<p>
    @{
        if((bool)ViewData["IsAdmin"]) {
            <a asp-action="Create">Dodaj</a>
        }
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="~/uploads/@item.ImageName" class="img" alt="Image" style="height:25px;"/>
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.Value zł
            </td>
            <td>
                <a asp-action="Buy" asp-route-id="@item.Id">Kup</a>
                <a asp-action="Sell" asp-route-id="@item.Id">Sprzedaj</a>
                <a asp-action="Details" asp-route-id="@item.Id">Detale</a>
                    @{
                        if ((bool)ViewData["IsAdmin"])
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id">Edytuj</a>
                            <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                        }
                    }
            </td>
        </tr>
}
    </tbody>
</table>
