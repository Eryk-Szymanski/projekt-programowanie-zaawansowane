@model WebApplication2.Models.Crypto

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-warning p-1">Detale</h1>

<div>
    <h3 class="text-warning p-2">@Model.Name</h3>
    <hr />
    <div class="row">
        <dt class="col-sm-2 text-warning">
            @Html.DisplayNameFor(model => model.Value)
        </dt>
        <dd class="col-sm-10 text-warning">
            @Model.Value zł
        </dd>
        <dt class="col-sm-2 text-warning">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10 text-warning text-wrap" style="overflow-wrap:break-word;">
            @Model.Description
        </dd>
    </div>
</div><br />
<div >
    <a class="text-warning" asp-action="Edit" asp-route-id="@Model?.Id">Edytuj</a><br />
    <a class="text-warning" asp-action="Index">Powrót do listy</a>
</div>
